{
  "include": ["src", "types", "env.js"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/lib"]
    },
    "strict": true,
    "skipLibCheck": true,
    "types": ["mocha", "snowpack-env", "node"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "importHelpers": true
  }
}
